{
  "manifest_version": 3,
  "name": "YouTube Shorts to TikTok Redirector",
  "version": "1.4",
  "description": "Redirects YouTube Shorts links to TikTok.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
